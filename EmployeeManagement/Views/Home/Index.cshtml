@model Dictionary<string, object>
@{
    ViewData["Title"] = "Dashboard";
    var totalEmployees = (int)Model["TotalEmployees"];
    var activeEmployees = (int)Model["ActiveEmployees"];
    var inactiveEmployees = (int)Model["InactiveEmployees"];
    var averageSalary = (decimal)Model["AverageSalary"];
    var departmentStats = Model["DepartmentStats"] as List<dynamic>;
}

<div class="row mb-4">
    <div class="col-12">
        <div class="dashboard-header">
            <h1 class="dashboard-title">Dashboard</h1>
            <p class="dashboard-subtitle">Employee Management System Overview</p>
        </div>
    </div>
</div>

<div class="row mb-5">
    <div class="col-md-3 mb-4">
        <div class="stats-card">
            <div class="stats-number">@totalEmployees</div>
            <div class="stats-label">Total Employees</div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="stats-card">
            <div class="stats-number" style="color: var(--success-color);">@activeEmployees</div>
            <div class="stats-label">Active Employees</div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="stats-card">
            <div class="stats-number" style="color: var(--warning-color);">@inactiveEmployees</div>
            <div class="stats-label">Inactive Employees</div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="stats-card">
            <div class="stats-number" style="color: var(--success-color);">$@averageSalary.ToString("N0")</div>
            <div class="stats-label">Average Salary</div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Department Distribution</h5>
            </div>
            <div class="card-body">
                @if (departmentStats != null && departmentStats.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th>Department</th>
                                    <th>Employee Count</th>
                                    <th>Percentage</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var dept in departmentStats)
                                {
                                    var percentage = Math.Round((double)dept.Count / activeEmployees * 100, 1);
                                    <tr>
                                        <td>@dept.Department</td>
                                        <td>@dept.Count</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="progress me-2" style="width: 100px; height: 8px;">
                                                    <div class="progress-bar bg-primary" style="width: @percentage%"></div>
                                                </div>
                                                @percentage%
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No department data available.</p>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Employees" asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-user-plus me-2"></i>Add New Employee
                    </a>
                    <a asp-controller="Employees" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-users me-2"></i>View All Employees
                    </a>
                    <a asp-controller="Employees" asp-action="Index" asp-route-isActive="true" class="btn btn-outline-secondary">
                        <i class="fas fa-user-check me-2"></i>Active Employees
                    </a>
                    <a asp-controller="Employees" asp-action="Index" asp-route-isActive="false" class="btn btn-outline-secondary">
                        <i class="fas fa-user-times me-2"></i>Inactive Employees
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
